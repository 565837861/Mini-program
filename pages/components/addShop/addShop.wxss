/* pages/components/addShop/addShop.wxss */
.shop-list{
  width: 100%;
  height: 865rpx;
  position: relative;
}
.nr{
  width: 100%;
  height: 89%;
  display: flex;
}
.meal{
  width: 160rpx;
  background-color: #f5f3f7;
  padding: 24rpx;
  /* padding: 20rpx;
  font-size: 24rpx;
  color: rgb(240, 20, 20);
  font-weight: 200;
  line-height: 28rpx; */
}
.ul{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  font-weight: 200;
  overflow: auto;
}
.li{
  height: 108rpx;
  /* line-height: 108rpx; */
  font-size: 25rpx;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
  box-sizing: border-box;
  padding-top:30rpx; 
  text-align: center;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.meal-list{
  width: 100%;
  overflow: auto;
}
.list-info{
  width: 100%;
}
.top-name{
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  background-color: #f5f3f7;
  font-size: 24rpx;
  box-sizing: border-box;
  border-left: 7rpx solid #d9dde1;
  padding-left: 20rpx;
  color: rgb(147, 153, 159);
}
.item{
  padding: 36rpx;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}
.info{
  margin-left: 20rpx;
}
.info-name{
  font-size: 28rpx;
  color: rgb(7, 17, 27);
  line-height: 28rpx;
}
.info-class{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  line-height: 20rpx;
  margin-top:15rpx;
}
.info-price{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  font-weight: normal/700;
  line-height: 48rpx;
  position: relative;
}
.info-price text{
  color: red;
}
.control{
  display: flex;
  position: absolute;
  margin-left: 250rpx;
  top: 0;
}
.control view{
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 48rpx; 
}
.control .increase{
  color: rgb(0, 160, 220);
  border: 5rpx solid rgb(0, 160, 220);
  box-sizing: border-box;
}
.control .add{
  background: rgb(0, 160, 220);
  color: white;
}
.control .num{
  width: 48rpx;
  line-height: 48rpx;
  font-size: 20rpx;
}
.item image{
  width: 114rpx;
  height: 114rpx;
  /* height: 140rpx; */
}
.cart{
  width: 100%;
  position: absolute;
  bottom: 35rpx;
  height: 100rpx;
  line-height: 80rpx;
  background: #141d27;
  box-sizing: border-box;
  padding: 16rpx;
  display: flex;
}
.small-circle{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #2B343C;
  margin-top: -40rpx;
  margin-left: 20rpx;
}
.allnum{
    color: #6D7379;
    font-size: 40rpx;
    font-weight: bold;
    margin-left: 30rpx;
}
.pull{
  font-size: 30rpx;
  border-left: 0.1rpx solid #6D7379;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  padding-left: 30rpx;
  color: #6D7379;
}
.buy{
     width: 200rpx;
     height: 110rpx;
     line-height: 110rpx;
     color: wheat;
     font-size: 30rpx;
     background: #2B333B;
     text-align: center;
     margin-right: -40rpx;
     margin-left: 40rpx;
     margin-top: -10rpx;
}